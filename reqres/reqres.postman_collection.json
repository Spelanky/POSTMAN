		{
			"name": "Login User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Созданный сервером jwt токен записываем в переменную \"jwt\"\r",
							"pm.environment.set(\"jwt\", pm.response.json().token);\r",
							"pm.test('Token placed to variable \"jwt\"');\r",
							"\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
